---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

const pageTitle = "About";

const identity = {
  firstName: "Łukasz",
  country: "Polanda",
  occupation: "Designer",
  hobbies: ["hiking", "runnig", "biking"],
};

const skills = ["Astro", "UX", "IA", "IxD", "UI", "UXR"];

const happy = true;
const finished = false;
const goal = 3;

const operatingSystem = "Linux";
const quantity = 3;
const footwear = "boots";
const student = false;

const skillColor = "purple";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro &rarr; {pageTitle}</title>
    <style define:vars={{skillColor}}>
      h1 {
        color: var(--skillColor);
        font-size: 4rem;
      }
      .skill {
        color: var(--skillColor);
        font-size: 0.9rem;
      }
    </style>
	</head>

  <body>

		<Header />

    <h1>{pageTitle}</h1>
		<code>Initialising about page…</code>
    <p>Hi, this is {identity.firstName}. I am a {identity.occupation} from {identity.country}.</p>
    <p>I like {identity.hobbies[0]} and {identity.hobbies[1]}.</p>
    <p> My skills are:{skills.map((skill) => <code class="skill"> {skill}</code>)}.</p>

    {happy && <p>I am happy to be learning Astro!</p>}

    {finished && <p>I finished this tutorial!</p>}
    
    {goal === 3 ? <p>My goal is to finish in 3 days.</p> : <p>My goal is not 3 days.</p>}

    <p>I have {quantity + 8} pairs of {footwear}</p>
    {student && <p>I am still in school.</p>}
    {operatingSystem === "MacOS" ? <p>I am using a Mac.</p> : <p>I am not using a Mac.</p>}

    <Footer />

    <script>
      import "../scripts/menu.js";
    </script>

  </body>

</html>